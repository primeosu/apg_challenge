source 'https://rubygems.org'

ruby '2.2.3'

gem 'rails', '4.2.4'
gem 'turbolinks'

# assets
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'

# views
gem 'slim'
gem 'slim-rails'

# storage
gem 'pg'

# servers
gem 'thin'

#CLI
gem 'pry-rails'

